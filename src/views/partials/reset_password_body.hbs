<div class="container min-h-screen bg-primary-0">
    <div class="back-area py-4 px-4 sm:px-6">
        <div class="back-area-icon">
            <img class="w-6 h-6 cursor-pointer" src="/images/svg/left-angle.svg" alt="">
        </div>
    </div>
    <div class="forgot-section mt-12 sm:px-6 px-4">
        <div class="forgot-title mb-12 text-center">
            <h3 class="font-satoshi font-bold not-italic text-26/[30px] mb-2">Reset Password</h3>
            <p class="text-primary-1 text-base font-satoshi font-medium not-italic">Remember your password this time</p>
        </div>
        <div class="forgot-form-area">
            <form action="">
                <div class="form-input mb-5">
                    <label class="font-satoshi font-medium text-sm/[17px] block mb-3 px-1">Current Password</label>
                    <input type="password" placeholder="Enter your Password"
                        class="bg-primary-0.1 block w-full py-3 px-3 font-satoshi font-medium text-base  rounded-lg outline-none">
                </div>
                <div class="form-input mb-5">
                    <label class="font-satoshi font-medium text-sm/[17px] block mb-3 px-1">New Password</label>
                    <input type="password" placeholder="Enter your Password"
                        class="bg-primary-0.1 block w-full py-3 px-3 font-satoshi font-medium text-sm  rounded-lg outline-none">
                </div>

                <div class="form-input mb-5">
                    <label class="font-satoshi font-medium text-sm/[17px] block mb-3 px-1">Confirm New Password</label>
                    <input type="password" placeholder="Enter New Password"
                        class="bg-primary-0.1 block w-full py-3 px-3 font-satoshi font-medium text-base  rounded-lg outline-none">
                </div>

                <div class="sub-btn mt-48">
                    <button
                        class="bg-primary py-3 rounded-3xl px-3 block font-satoshi font-bold text-primary-0 w-full text-lg">Change
                        Password</button>
                </div>
            </form>
        </div>
    </div>
</div>